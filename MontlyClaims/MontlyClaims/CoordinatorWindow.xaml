<Window x:Class="MontlyClaims.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MontlyClaims"
        mc:Ignorable="d"
        Title="Programme Coordinator Dashboard - Monthly Claims System"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#e74c3c" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Programme Coordinator Dashboard"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        x:Name="btnBack"
                        Content="← Back to Main"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="btnBack_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#c0392b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Quick Stats Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#e0e0e0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="#fff9e6" CornerRadius="6" Padding="15" Margin="0,0,10,0" BorderThickness="1" BorderBrush="#f39c12">
                    <StackPanel>
                        <TextBlock Text="Pending Claims" FontSize="11" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtPendingClaims" Text="0" FontSize="20" FontWeight="Bold" Foreground="#f39c12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#e8f4fd" CornerRadius="6" Padding="15" Margin="10,0,10,0" BorderThickness="1" BorderBrush="#3498db">
                    <StackPanel>
                        <TextBlock Text="Claims This Month" FontSize="11" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtMonthlyClaims" Text="0" FontSize="20" FontWeight="Bold" Foreground="#3498db" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#fff9e6" CornerRadius="6" Padding="15" Margin="10,0,10,0" BorderThickness="1" BorderBrush="#f39c12">
                    <StackPanel>
                        <TextBlock Text="Amount Pending" FontSize="11" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtPendingAmount" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#f39c12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#d5f4e6" CornerRadius="6" Padding="15" Margin="10,0,0,0" BorderThickness="1" BorderBrush="#27ae60">
                    <StackPanel>
                        <TextBlock Text="Approved This Month" FontSize="11" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtApprovedThisMonth" Text="0" FontSize="20" FontWeight="Bold" Foreground="#27ae60" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Pending Claims Section -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#e0e0e0" Margin="0,0,0,15" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Section Header -->
                <Border Grid.Row="0" Background="#34495e" CornerRadius="8,8,0,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Pending Claims Requiring Approval"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="btnRefresh"
                                    Content="🔄 Refresh"
                                    Width="100"
                                    Height="30"
                                    Background="#3498db"
                                    Foreground="White"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="btnRefresh_Click"
                                    Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#3498db"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980b9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnExport"
                                    Content="📊 Export"
                                    Width="100"
                                    Height="30"
                                    Background="#27ae60"
                                    Foreground="White"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="btnExport_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#27ae60"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#219652"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Claims List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="lstPendingClaims" Margin="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#fff9e6" 
                                       BorderBrush="#f39c12" 
                                       BorderThickness="0,0,0,1" 
                                       Padding="15"
                                       Margin="10,5,10,5"
                                       CornerRadius="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Claim Icon -->
                                        <Border Grid.Column="0" 
                                               Background="#f39c12" 
                                               CornerRadius="20" 
                                               Width="40" 
                                               Height="40"
                                               Margin="0,0,15,0">
                                            <TextBlock Text="💰" 
                                                      FontSize="16" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Claim Details -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding LecturerName}" 
                                                      FontSize="16" 
                                                      FontWeight="Bold" 
                                                      Foreground="#2c3e50"
                                                      Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding ClaimPeriod}" 
                                                      FontSize="12" 
                                                      Foreground="#7f8c8d"
                                                      Margin="0,0,0,5"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Hours: " 
                                                          FontSize="12" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="#2c3e50"/>
                                                <TextBlock Text="{Binding HoursWorked}" 
                                                          FontSize="12" 
                                                          Foreground="#2c3e50"/>

                                                <TextBlock Text=" • Rate: " 
                                                          FontSize="12" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="#2c3e50"
                                                          Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding HourlyRate, StringFormat=C2}" 
                                                          FontSize="12" 
                                                          Foreground="#2c3e50"/>

                                                <TextBlock Text=" • Total: " 
                                                          FontSize="12" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="#2c3e50"
                                                          Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding TotalAmount, StringFormat=C2}" 
                                                          FontSize="12" 
                                                          FontWeight="Bold" 
                                                          Foreground="#27ae60"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Notes}" 
                                                      FontSize="11" 
                                                      Foreground="#7f8c8d"
                                                      TextWrapping="Wrap"
                                                      MaxWidth="600"/>

                                            <!-- Supporting Documents -->
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Documents: " 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="#2c3e50"/>
                                                <Button Content="📎 View Files" 
                                                       Background="Transparent" 
                                                       BorderThickness="0"
                                                       FontSize="11"
                                                       Padding="5,2"
                                                       Cursor="Hand"
                                                       Click="btnViewFiles_Click"
                                                       Tag="{Binding}"
                                                       Foreground="#3498db"
                                                       Visibility="{Binding HasFilesVisibility}"/>
                                                <TextBlock Text="No files attached" 
                                                          FontSize="11" 
                                                          Foreground="#95a5a6"
                                                          Visibility="{Binding NoFilesVisibility}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="2" 
                                                   Orientation="Vertical" 
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Width="200">
                                            <Button x:Name="btnApprove" 
                                                   Content="✅ Approve Claim" 
                                                   Width="180" 
                                                   Height="35" 
                                                   Background="#27ae60" 
                                                   Foreground="White" 
                                                   FontSize="12" 
                                                   FontWeight="Bold"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Click="btnApprove_Click"
                                                   Tag="{Binding}"
                                                   Margin="0,0,0,5">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#27ae60"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#219652"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button x:Name="btnReject" 
                                                   Content="❌ Reject Claim" 
                                                   Width="180" 
                                                   Height="35" 
                                                   Background="#e74c3c" 
                                                   Foreground="White" 
                                                   FontSize="12" 
                                                   FontWeight="Bold"
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Click="btnReject_Click"
                                                   Tag="{Binding}"
                                                   Margin="0,5,0,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#e74c3c"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#c0392b"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button x:Name="btnViewDetails" 
                                                   Content="👁️ View Details" 
                                                   Width="180" 
                                                   Height="25" 
                                                   Background="Transparent" 
                                                   Foreground="#3498db" 
                                                   FontSize="10" 
                                                   BorderThickness="1"
                                                   BorderBrush="#3498db"
                                                   Cursor="Hand"
                                                   Click="btnViewDetails_Click"
                                                   Tag="{Binding}"
                                                   Margin="0,5,0,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#3498db"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- No Pending Claims Message -->
                <Border Grid.Row="1" 
                       x:Name="pnlNoPendingClaims" 
                       Background="#f8f9fa" 
                       Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🎉 No Pending Claims" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#27ae60"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="All claims have been processed. Great work!" 
                                  FontSize="12" 
                                  Foreground="#7f8c8d" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="3" Background="#ecf0f1" CornerRadius="8" Padding="15">
            <TextBlock Text="Programme Coordinator Portal - Monthly Claims Approval System"
                       Foreground="#7f8c8d"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
