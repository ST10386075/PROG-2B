<Window x:Class="MontlyClaims.EditPersonalInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MontlyClaims"
        mc:Ignorable="d"
        Title="Edit Personal Information - Lecturer" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#f8f9fa"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#3498db" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,20">
            <TextBlock Text="Edit Personal Information" 
                       Foreground="White" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Form Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Personal Details Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="25"
                        BorderThickness="1"
                        BorderBrush="#e0e0e0"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Personal Details" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2c3e50"
                                   Margin="0,0,0,20"/>

                        <!-- Full Name -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Full Name *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtFullName" 
                                     Text="Dr. John Smith" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Lecturer ID (Read-only) -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Lecturer ID" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtLecturerID" 
                                     Text="LEC001" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"
                                     IsEnabled="False"
                                     Background="#ecf0f1"/>
                            <TextBlock Text="Lecturer ID cannot be changed" 
                                       FontSize="11" 
                                       Foreground="#7f8c8d" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Department -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Department *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbDepartment" 
                                      FontSize="14" 
                                      Padding="8" 
                                      BorderThickness="1"
                                      BorderBrush="#bdc3c7"
                                      Height="40">
                                <ComboBoxItem Content="Computer Science" IsSelected="True"/>
                                <ComboBoxItem Content="Mathematics"/>
                                <ComboBoxItem Content="Physics"/>
                                <ComboBoxItem Content="Chemistry"/>
                                <ComboBoxItem Content="Biology"/>
                                <ComboBoxItem Content="Engineering"/>
                                <ComboBoxItem Content="Business Administration"/>
                                <ComboBoxItem Content="Social Sciences"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Contact Information Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="25"
                        BorderThickness="1"
                        BorderBrush="#e0e0e0"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Contact Information" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2c3e50"
                                   Margin="0,0,0,20"/>

                        <!-- Email Address -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email Address *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtEmail" 
                                     Text="john.smith@university.edu" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Phone Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Phone Number *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPhone" 
                                     Text="+1 (555) 123-4567" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Office Location -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Office Location" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtOffice" 
                                     Text="Science Building, Room 305" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Banking Information Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="25"
                        BorderThickness="1"
                        BorderBrush="#e0e0e0"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Banking Information (For Claims Payment)" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2c3e50"
                                   Margin="0,0,0,20"/>

                        <!-- Bank Name -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Bank Name *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtBankName" 
                                     Text="National Bank" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Account Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Account Number *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAccountNumber" 
                                     Text="XXXX-XXXX-1234" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Account Holder Name -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Account Holder Name *" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAccountHolder" 
                                     Text="Dr. John Smith" 
                                     FontSize="14" 
                                     Padding="12" 
                                     BorderThickness="1"
                                     BorderBrush="#bdc3c7"
                                     Height="40"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderThickness="1"
                BorderBrush="#e0e0e0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Width="120" 
                        Height="45" 
                        Background="#95a5a6" 
                        Foreground="White" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"
                        Margin="0,0,15,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#95a5a6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7f8c8d"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave" 
                        Content="Save Changes" 
                        Width="150" 
                        Height="45" 
                        Background="#27ae60" 
                        Foreground="White" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27ae60"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#219652"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

