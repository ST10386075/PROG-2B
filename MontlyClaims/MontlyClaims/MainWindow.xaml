<Window x:Class="MontlyClaims.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MontlyClaims"
        mc:Ignorable="d"
        Title="Monthly Claims System" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f8ff">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20">
            <TextBlock Text="Welcome to Monthly Claims System" 
                      Foreground="White" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content Section -->
        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Margin="40">

            <!-- Welcome Message -->
            <TextBlock Text="Welcome!" 
                      FontSize="28" 
                      FontWeight="SemiBold" 
                      Foreground="#2c3e50" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <TextBlock Text="Please select your role to continue:" 
                      FontSize="16" 
                      Foreground="#34495e" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,40"/>

            <!-- Role Selection Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">

                <!-- Lecturer Button -->
                <Button x:Name="btnLecturer" 
                       Content="Lecturer" 
                       Width="240" 
                       Height="60" 
                       Margin="0,0,20,0"
                       Background="#3498db" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand" Click="btnLecturer_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498db"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Programme Coordinator Button -->
                <Button x:Name="btnCoordinator" 
                       Content="Programme Coordinator" 
                       Width="240" 
                       Height="60" 
                       Margin="20,0,0,0"
                       Background="#e74c3c" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand" Click="btnCoordinator_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#e74c3c"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#c0392b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Additional Info -->
            <TextBlock Text="Choose your role to access the appropriate features and functionality." 
                      FontSize="12" 
                      Foreground="#7f8c8d" 
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      MaxWidth="400"/>
        </StackPanel>

        <!-- Footer Section -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <TextBlock Text="Monthly Claims Processing System © 2024" 
                      Foreground="#7f8c8d" 
                      FontSize="12" 
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
