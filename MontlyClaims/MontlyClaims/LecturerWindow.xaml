<Window x:Class="MontlyClaims.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MontlyClaims"
        mc:Ignorable="d"
        Title="Lecturer Dashboard - Monthly Claims System"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#3498db" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Lecturer Dashboard"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        x:Name="btnBack"
                        Content="← Back"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="btnBack_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Section -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Quick Actions -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="10"
                    Padding="25"
                    BorderThickness="1"
                    BorderBrush="#e0e0e0">
                <StackPanel>
                    <TextBlock Text="Quick Actions"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2c3e50"
                               Margin="0,0,0,25"/>

                    <!-- Edit Information Button -->
                    <Border CornerRadius="8" Margin="0,0,0,15">
                        <Button x:Name="btnEditInfo"
                                Content="Edit Personal Information"
                                Height="70"
                                Background="#3498db"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnEditInfo_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3498db"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980b9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>

                    <!-- Submit Claims Button -->
                    <Border CornerRadius="8" Margin="0,0,0,15">
                        <Button x:Name="btnSubmitClaims"
                                Content="Submit Monthly Claims"
                                Height="70"
                                Background="#27ae60"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnSubmitClaims_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#27ae60"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#219652"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>

                    <!-- View Previous Claims Button -->
                    <Border CornerRadius="8">
                        <Button x:Name="btnViewClaims"
                                Content="View Previous Claims"
                                Height="70"
                                Background="#f39c12"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnViewClaims_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#f39c12"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#d35400"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Right Panel - Information Display -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="10"
                    Padding="25"
                    BorderThickness="1"
                    BorderBrush="#e0e0e0">
                <StackPanel>
                    <TextBlock Text="Lecturer Information"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2c3e50"
                               Margin="0,0,0,20"/>

                    <!-- Current Information Display -->
                    <StackPanel x:Name="pnlInfoDisplay">
                        <Border Background="#ecf0f1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Dr. John Smith"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="ID: LEC001"
                                           FontSize="14"
                                           Foreground="#7f8c8d"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Department: Computer Science"
                                           FontSize="14"
                                           Foreground="#7f8c8d"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Email: john.smith@university.edu"
                                           FontSize="14"
                                           Foreground="#7f8c8d"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Phone: +1 (555) 123-4567"
                                           FontSize="14"
                                           Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Last Claim Submitted: January 2024"
                                   FontSize="12"
                                   Foreground="#95a5a6"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer Section -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="15">
            <TextBlock Text="Lecturer Portal - Monthly Claims Processing System"
                       Foreground="#7f8c8d"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
